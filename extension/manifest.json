{
  "manifest_version": 3,
  "name": "LocalHire Agent",
  "version": "1.1",
  "permissions": [
    "activeTab",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html"
  },
  "host_permissions": [
    "http://127.0.0.1:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "context.js"
      ]
    }
  ]
}